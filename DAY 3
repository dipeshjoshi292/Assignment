//QUES 1 
#include<iostream>
using namespace std;
int main(){
  int n;
  cout<<"Enter a number: ";
  cin>>n;
  int s=0;
  for(int i=0;i<=n;i++){
    s+=i;
    
  }
  cout<<"The sum of the first 5 natural number is: "<<s;
}

//QUES 2
#include<iostream>
using namespace std;
int main(){
  int n;
  cout<<"Enter a number: ";
  cin>>n;
  int f=1;
  if(n==1){
    f=1;
  }
  else{
  for(int i=1;i<=n;i++){
    f*=i;
  }
  }
  cout<<"The factorial of 4 is: "<<f;
}

//Ques 3 
#include<iostream>
using namespace std;
int main(){
  int n;
  cout<<"Multiplication table of: ";
  cin>>n;
  for(int i=1;i<=10;i++){
    cout<<n <<" * "<< i<< " = "<< n*i<<endl;
  }
}
